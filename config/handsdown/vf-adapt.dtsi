            akK_Cap { trigger-keys = <CMMA>; max-prior-idle-ms = <my_ak_term>; bindings = <&kp BSPC &kp LSHIFT(K)>; };
            akK_b_lk { trigger-keys = <D G>; bindings = <&kp BSPC &kp L &kp K>; };
            akK_b_ck { trigger-keys = <T>; bindings = <&kp BSPC &kp C &kp K>; };
        };
        ak_M: ak_M {
